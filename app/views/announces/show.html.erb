<div class="padded">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="owl-carousel center-block">
          <% @announce.pictures.each do |pic| %>
            <div> <%= image_tag pic.picture.url(:medium) %> </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <p class="titre"><%= @announce.title.capitalize %></p>
        <p class="locality"><%= @announce.locality %></p>
      </div>
    </div>

    <div class="detail-announce-box">
      <div class="row">
        <div class="col-md-6">
          <p class="price"><%= @announce.price %> â‚¬</p>
          <p class="locality"><%= @announce.surface%>m2</p>
        </div>
        <div class="col-md-6">
          <p class="type_announce">a vendre</p>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8 col-md-offset-2">

          <button type="button" class="btn btn-black btn-lg" data-toggle="modal" data-target="#myModal">
    En savoir plus
  </button>
        </div>
      </div>
    </div>

  </div>

  <div class="clear"></div>

  <div class="announce-content">
    <div class="container">
      <div class="row">
        <div class="col-md-3">

          <iframe width="200" height="200" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://maps.google.fr/maps/ms?ie=UTF8&amp;msa=0&amp;msid=101686375028251599401.0004484f73bea6145ef6b&amp;ll=<%=@announce.latitude%>,<%=@announce.longitude%>&amp;spn=0,0&amp;output=embed&amp;s=AARTsJqhzeyiqiLGEqDCDC7ar_q7Q1nmAw"></iframe>

        </div>
        <div class="col-md-4">
          <p class="locality"><%=@announce.property.name%> - <%=@announce.bed%> chambre(s) - <%= @announce.bath%> salle(s) de bains</p>


          <p class="detail-description"><%=@announce.description %></p>
        </div>
      </div>
    </div>
  </div>








  <!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Modal title</h4>
        </div>
        <div class="modal-body">
          ...
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>

  <div class="similar_announces">
    <div class="container">

      <% if @similar_announces.count > 1 %>
        <h5> Annonces similaires </h5>
        <div class="row">
          <!-- <div class="col-md-4"> -->

            <% @similar_announces.each do |t| %>
              <div class="col-md-4">
              <%= render "shared/cart2", announce: t %>
              </div>
            <% end %>
          <!-- </div> -->

        </div>
      <% end %>
    </div>
  </div>




</div>
  <% content_for(:after_js) do %>
    <%= javascript_tag do %>
      $(document).ready(function() {
        var coord = <%= raw @announce_coordinates %>;
        alert('Announce coordinates are ' + coord.lat + ', ' + coord.lng);
      });
    <% end %>
  <% end %>



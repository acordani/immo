<div class="bg">
  <div class="container">
    <div class="row padded text-center">
      <div class="col-xs-12 col-sm-8 col-sm-offset-2">
        <h1>RECHERCHEZ LA MAISON QUI VOUS CONVIENT !</h1>
      </div>
    </div>
  </div>
  <div class="bg-search">
    <div class="container">
      <div class="row text-center pt-20">
        <!-- <div class="col-xs-6  col-sm-8 col-sm-offset-2"> -->
          <%= form_tag announces_path, method: :get, class: 'form-inline' do %>
            <div class="form-group">

              <div class="col-xs-6 col-xs-offset-1  col-sm-6 ">
                  <input id="user_input_autocomplete_address" type="text" class="form-control" placeholder="Dans quelle ville recherchez-vous ?">
                  <input id="locality" name="locality" type="hidden" >
              </div>
              <div class="col-xs-2  col-sm-2 col-sm-offset-2">
              <!-- <input type="text" class="form-control" id="cityfield" name="locality" placeholder="Où recherchez-vous ?"> -->
              <button type="submit" class="btn btn-success">On y va !</button>
              </div>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="announces mt-50">
      <% if Announce.count >=3 %>
        <% Announce.all.select { |f| f.pictures.exists? }.take(3).each do |a| %>
          <div class="col-md-4">
            <%= link_to announce_path(a) do %>
              <%= image_tag a.pictures.first.picture.url(:medium), class: "cart" %>
            <% end %>
            <div class="cart_content">
              <p><%= a.locality %></p>
              <p><%= a.property.name %></p>
              <p><%= a.price %> €</p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>



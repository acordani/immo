<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <form class="form">
        <h1><span class="sign-up">sign up</span></h1>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="row">
            <div class="col-xs-5">
             <label for="login"><i class="fa fa-user"></i>e-mail</label>
             <%= f.input :email, placeholder: 'email', required: true, autofocus: true, label: false, input_html: { class: 'float mb-20' } %>
            </div>
            <div class="col-xs-1"></div>
            <div class="col-xs-6">
              <label for="login"><i class="fa fa-unlock-alt"></i>Mot de passe</label>
              <%= f.input :password, placeholder: 'mot de passe', required: true, label: false, input_html: { class: 'float mb-20' }, hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @validatable) %>
            </div>
          </div>
          <div class="clear"></div>
          <div class="row mb-30">
            <div class="col-xs-5">
              <% if devise_mapping.omniauthable? %>
                <% resource_class.omniauth_providers.each do |provider| %>
                  <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: "btn log-facebook"%><br />
                <% end %>
              <% end %>
            </div>
            <div class="col-xs-1"></div>
            <div class="col-xs-6">
              <%= f.button :submit, "Sign up", value: "Inscription" %>
            </div>
          </div>
          <div class="row">
            <%= render "devise/shared/links" %>
          </div>
        <% end %>

      </form>
    </div>
  </div>
</div>


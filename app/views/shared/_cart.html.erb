<div class="white_cart">
  <% if announce.pictures.any? %>

    <%= image_tag(announce.pictures.first.picture.url(:medium), alt: "Flat Picture") %>
  <% else %>
    <%= image_tag('no_photo.png', class: "no_photo") %>
  <% end %>
  <h3><%= announce.title.capitalize %></h3>
  <p><%= announce.property.name %></p>
</div>
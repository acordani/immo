<div class="cart text-center">
  <% if announce.pictures.any? %>

    <%= image_tag(announce.pictures.first.picture.url(:medium), alt: "Flat Picture") %>
  <% else %>
    <%= image_tag('no_photo.png', class: "no_photo") %>
  <% end %>
  <p class="category-property"><%= announce.property.name %></p>
  <h3 class="title"><%= announce.title.capitalize.truncate(30) %></h3>

  <%= link_to "En savoir plus", announce_path(announce), class: "btn btn-black" %>

</div>